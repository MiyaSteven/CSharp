@model Product

<div class="form-group row">
    <label asp-for="ProductName" class="col-sm-4"></label>
    <span class="col-sm-8 text-danger" asp-validation-for="ProductName"></span>
    <input asp-for="ProductName" class="col-sm-12 form-control">
</div>
<div class="form-group row">
    <label asp-for="ReleaseDate" class="col-sm-4"></label>
    <span class="col-sm-8 text-danger" asp-validation-for="ReleaseDate"></span>
    <input asp-for="ReleaseDate" class="col-sm-12 form-control">
</div>
<div class="form-group row">
    <label asp-for="Quantity" class="col-sm-4"></label>
    <span class="col-sm-8 text-danger" asp-validation-for="Quantity"></span>
    <input asp-for="Quantity" class="col-sm-12 form-control">
</div>
<div class="form-group row">
    <label asp-for="Description" class="col-sm-4"></label>
    <span class="col-sm-8 text-danger" asp-validation-for="Description"></span>
    <input asp-for="Description" class="col-sm-12 form-control">
</div>
