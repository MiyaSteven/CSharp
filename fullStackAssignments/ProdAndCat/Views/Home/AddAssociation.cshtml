@using ProdAndCat.Models
@model AssociationWrapper
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>@Model.ToDisplay.Name</h1>
        <div class="col-sm-6">
            <form asp-action="CreateAssociation" asp-controller="Home" asp-route-id="@Model.ToDisplay.ProductId" method="post">
                <div class="form-group row">
                    <label asp-for="AssociationForm.CategoryId" class="col-sm-4">Category: </label>
                    <select asp-for="AssociationForm.CategoryId" class="col-sm-8">
                        @foreach(Category category in Model.CategoryDropdown)
                        {
                            <option value="@category.CategoryId">@category.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group row">
                    <input type="submit" value="Submit" class="col-sm-4 offset-sm-4 btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</body>
</html>
